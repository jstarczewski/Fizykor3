                <com.jstarczewski.pc.mathview.src.MathView
                    android:id="@+id/mvEquation4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</layout>